<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="8dp"
    android:layout_weight="1"
    android:background="@drawable/bg_rounded_white_border"
    android:orientation="horizontal"
    android:padding="8dp"
    tools:background="@color/primaryGray">

    <androidx.cardview.widget.CardView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:cardCornerRadius="8dp">

        <ImageView
            android:id="@+id/iv_medicine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/asset_dummy_antacids" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_medicine_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Antacids"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_medicine_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1 morning, 1 night (before food)"
            android:textColor="@color/white" />

    </LinearLayout>


</LinearLayout>