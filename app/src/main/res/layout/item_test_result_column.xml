<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rounded_child_card"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/tv_result_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textColor="@color/primaryGreen"
        android:textStyle="bold"
        tools:text="@string/fragment_weight_test_weight" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_result_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="162.5" />

        <TextView
            android:id="@+id/tv_result_extension"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="@string/fragment_weight_kg"
            android:textSize="10sp"
            android:textAllCaps="true"
            android:textColor="@color/lightGray"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_result_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_rounded_white_border"
        android:backgroundTint="@color/primaryBlue"
        android:paddingHorizontal="16dp"
        android:paddingVertical="2dp"
        android:textAlignment="center"
        android:textSize="8sp"
        android:textColor="@color/primaryGray"
        android:textStyle="bold"
        tools:text="@string/fragment_weight_test_weight" />

</LinearLayout>