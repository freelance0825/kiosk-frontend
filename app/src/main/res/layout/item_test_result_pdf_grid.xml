<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:background="@drawable/bg_rounded_gray_border"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginBottom="16dp"
    android:gravity="start"
    android:orientation="vertical"
    android:padding="24dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#3C6EFF"
        app:cardCornerRadius="12dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="12dp"
            android:src="@drawable/icon_eye" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_result_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:textColor="@color/grayOpacity80"
        android:textStyle="bold"
        tools:text="@string/fragment_weight_test_weight" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_result_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold"
            tools:text="162.5" />

        <TextView
            android:id="@+id/tv_result_extension"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="@string/fragment_weight_kg"
            android:textAllCaps="true"
            android:textColor="@color/grayOpacity80"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_result_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_rounded_white_border"
        android:backgroundTint="#4D35C8F4"
        android:paddingHorizontal="16dp"
        android:paddingVertical="2dp"
        android:textAlignment="center"
        android:textColor="#0092BE"
        android:textStyle="bold"
        tools:text="@string/fragment_weight_test_weight" />

</LinearLayout>